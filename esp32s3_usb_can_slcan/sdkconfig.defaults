# --- TinyUSB CDC device ---
CONFIG_TINYUSB_ENABLED=y
CONFIG_TINYUSB_DEVICE_ENABLED=y
CONFIG_TINYUSB_CDC_ENABLED=y
CONFIG_TINYUSB_DESC_USE_ESPRESSIF_VID_PID=y
CONFIG_TINYUSB_DESC_CUSTOM_PID=0x7D01

# --- USB settings ---
CONFIG_USB_DEVICE_ENABLED=y
CONFIG_USB_OTG_ENABLED=y
CONFIG_USB_CDC_ENABLED=y
CONFIG_ESP_CONSOLE_USB_CDC=y
CONFIG_ESP_CONSOLE_NONE=n
CONFIG_ESP_CONSOLE_UART_DEFAULT=n
CONFIG_ESP_CONSOLE_USB_CDC_BOOT_TIMEOUT_MS=0

# --- TWAI (CAN) ---
CONFIG_TWAI_ISR_IN_IRAM=y

# --- Logging (feel free to tune) ---
CONFIG_LOG_DEFAULT_LEVEL_INFO=y
CONFIG_LOG_COLORS=y

# Reduce noise from Wi-Fi/Bluetooth; we don't need them.
CONFIG_ESP_WIFI_ENABLED=n
CONFIG_BT_ENABLED=n
